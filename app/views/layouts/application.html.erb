<!DOCTYPE html>
<html class="h-100" id="hotwire-livereload">
  <head <%= Rails.env.development? %>>
    <%= render partial: 'layouts/head' %>
    <%= render partial: 'layouts/metrics' %>
  </head>
  <body class="<%= current_page_path_as_class %> d-flex flex-column h-100">
    <% if user_signed_in? %>
      <header class="bg-444444">
        <div class="container">
        <%= render 'layouts/navigation' %>
        </div>
      </header>
    <% else %>
      <%= render partial: "/home/header"%>
    <% end %>
    <main>
      <div id="main-content" class="container-fluid ">
        <%= render "shared/modal_wrap"%>
        <div id="our_flash" class="position-fixed z-1 top-0 end-0 p-3 w-50">
          <%= render "shared/flash"%>
        </div>
        <%= yield %>
      </div>
    </main>
    <%= render partial: "/layouts/footer" if check_current_page_show_this_part? %>
    <%# render partial: "/layouts/messengers"%>
    <%# render partial: "/layouts/modal"%>
    </body>
  </html>
