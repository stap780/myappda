<div class="row align-items-center">
  <div class="col">
    <h2>Счета</h2>
  </div>
  <div class="col">
    <%= link_to 'Новый счет', new_invoice_path, class: 'btn btn-outline-primary' %>
  </div>
  <div class="col"></div>
</div>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Номер счета</th>
      <th>Период продления</th>
      <th>Сумма</th>
      <th>Статус</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= link_to invoice.id , invoice %></td>
        <td><%= invoice.payplan.period if invoice.payplan != nil%></td>
        <td><%= invoice.sum %></td>
        <td><%= invoice.status %></td>
        <% if invoice.status != 'Оплачен' %>
          <td><%= link_to '<span class="oi oi-pencil"></span>'.html_safe, edit_invoice_path(invoice) %></td>
          <td><%= link_to '<span class="oi oi-trash"></span>'.html_safe, invoice, method: :delete, data: { confirm: 'Вы уверенны?' } %></td>
          <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
