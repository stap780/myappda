<div class="row align-items-center mt-3 mb-3">
  <div class="col-2">
  <div class="col-md-12 p-0">
    <div class="h3">Restock Setups</div>
  </div>
  </div>
  <div class="col-10 pl-0 pr-0 row">
  <div class="col-12">
    <div class="btn-group p-0" role="group" aria-label="Button group with nested dropdown">
    <div class="btn-group" role="group">
      <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle btn-sm" data-bs-toggle="dropdown">Действия</button>
      <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
        <%= link_to 'New Restock Setup', new_restock_setup_path, class: 'dropdown-item' %>
      </div>
    </div>
    </div>
  </div>
  <%= search_form_for @search, {class: 'form-inline col-12 pl-0 pr-0'} do |f| %>
    <div class="input-group input-group-sm">
            <%= f.search_field :title_eq , placeholder: 'title', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :handle_eq , placeholder: 'handle', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :description_eq , placeholder: 'description', class: "form-control", style: "max-width: 180px;" %>
            <%= f.search_field :status_eq , placeholder: 'status', class: "form-control", style: "max-width: 180px;" %>
            <%= button_tag(type: 'submit', :class => "btn btn-info") do %>
        <span class="oi oi-magnifying-glass"></span>
      <% end %>
      <%= link_to '<span class="oi oi-reload"></span>'.html_safe, restock_setups_path, class: 'btn btn-outline-dark ' %>
      <%# link_to '<span class="oi oi-trash"></span>'.html_safe, delete_selected_restock_setups_path, class: 'btn btn-secondary', id: 'deleteAll', remote: true %>
    </div>
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
  <thead>
    <tr class="bg-success">
      <th><%= check_box_tag 'selectAll', 'selectAll'%></th>
      <th>Title</th>
      <th>Handle</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="items_table">
    <% @restock_setups.each do |restock_setup| %>
    <tr>
        <td><%= check_box_tag "restock_setup_ids[]", restock_setup.id %></td>
        <td><%= restock_setup.title %></td>
        <td><%= restock_setup.handle %></td>
        <td><%= restock_setup.description %></td>
        <td><%= restock_setup.status %></td>
        <td><%= link_to '<span class="oi oi-eye"></span>'.html_safe, restock_setup %></td>
        <td><%= link_to '<span class="oi oi-pencil"></span>'.html_safe, edit_restock_setup_path(restock_setup) %></td>
        <td><%= link_to '<span class="oi oi-trash"></span>'.html_safe, restock_setup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="apple_pagination">
<%= will_paginate @restock_setups %>
</div>
