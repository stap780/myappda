<div class="row align-items-center">
  <div class="col-2">
    <h2>Клиенты</h2><small>Всего - <%= Client.count%></small>
  </div>
  <div class="col-2 align-self-center">
    <%= link_to '<i class="fa fa-list" aria-hidden="true"></i> Сохранить отчет'.html_safe, clients_otchet_path, title: "Отчет", class: "btn btn-light", role:"button", remote: true%>
  </div>
  <%= search_form_for @search, html: {class: 'form-inline col-3 pl-0 pr-0'}  do |f|%>
    <div class="input-group input-group-sm">
      <%= f.search_field :clientid_cont_all, placeholder: 'ID', class: "form-control"%>
      <%= button_tag(type: 'submit', :class => "btn btn-info") do %><span class="oi oi-magnifying-glass"></span><% end %>
      <%= link_to '<span class="oi oi-reload"></span>'.html_safe, clients_path, class: 'btn btn-outline-dark' %>
    </div>
  <% end %>
</div>

<div class="table-responsive">
<table class="table table-hover table-condensed table-sm">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>ID INS</th>
      <th>ФИО</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Избранное</th>
      <th>Restock</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.id, client_path(client) %></td>
        <td><%= client.clientid%></td>
        <td><%= client.name %><%= client.surname%></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.izb_productid.split(',').size %> шт.</td>
        <td></td>
        <td><%= link_to '<span class="oi oi-trash"></span>'.html_safe, client, method: :delete, data: { confirm: 'Вы уверенны?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="digg_pagination">
  <%= will_paginate @clients %>
</div>
