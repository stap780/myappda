<tr class="align-middle">
    <td>
        <div class="d-flex flex-column">
            <%=tag.div class: 'form-check' do %>
                <%= check_box_tag "client_ids[]", client.id, false, {class: 'checkboxes form-check-input', data: { 'select-all_target': 'checkbox', action: "change->selectall#toggleParent"}, form: :bulk_action_form } %>
                <%=tag.div( client.clientid, class: 'opacity-75 fs-8') if client.clientid %>
            <% end %>
        </div>
    </td>
    <td class="fs-8"><%= client.created_at.in_time_zone.strftime('%d/%m/%Y %H:%M')%></td>
    <td><%= client.fio %></td>
    <td><%="Телефон: #{client.phone}" if client.phone%></br><%="Email: #{client.email}" if client.email%></td>
    <%=tag.td do %>
        <%= link_to client.favorites.count.to_s, client, data: { turbo_frame: "offcanvas_wrap", turbo_stream: true } %>
    <% end %>
    <%=tag.td do %>
        <%= link_to client.restocks.count.to_s, client, data: { turbo_frame: "offcanvas_wrap", turbo_stream: true }  %>
    <% end %>
     <%=tag.td do %>
        <%= link_to client.preorders.count.to_s, client, data: { turbo_frame: "offcanvas_wrap", turbo_stream: true } %>
    <% end %> 
     <%=tag.td do %>
        <%= link_to client.abandoned_carts.count.to_s, client, data: { turbo_frame: "offcanvas_wrap", turbo_stream: true } %>
    <% end %>    
    <td>
        <%= link_to trash_icon, client, data: { "turbo-method": :delete, 'turbo-confirm': 'Вы уверенны?' }, class:"" %>
    </td>
</tr>