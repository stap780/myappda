<style>
  .header-wrap {
    justify-content: center!important;
    border-bottom: unset!important;
    padding-top: 2rem!important;
  }
  .header-wrap .navbar-toggler, .header-wrap .navbar-collapse, .footer {display:none!important;}
  .header-wrap .navbar {
    justify-content: center;
    display: flex;
    background: transparent;
  }
</style>
<div class="form-wrap">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-signin', method: :post, data: { turbo: false} }) do |f| %>
  <h2 class="form-signin-heading"><%= t('.sign_up', :default => "Забыли пароль?") %></h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.input_field :email, autofocus: true , class: 'form-control my-2', placeholder: "Email" %>

  <%# START add reCAPTCHA %>
  <%# flash[:recaptcha_error] %>
  <%# recaptcha_tags %>
  <%# END add reCAPTCHA %>

  <%= f.submit t('.sign_up', :default => "Отправить инструкции"), class: 'btn btn-success' %>
<% end %>

<div class="form-sign-help">
  <%= render "devise/shared/links" %>
</div>
</div>
