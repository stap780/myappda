<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form", class: "form-signin", data: { turbo: false} }) do |f| %>
<h2 class="form-signin-heading"><%= t('.sign_in', :default => "Вход в сервис") %></h2>
<%= render "devise/shared/error_messages", resource: resource %>
<%= f.label :email, class: "sr-only" %>
<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>

<%= f.label :password, class: "sr-only" %>
<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Пароль" %>

<% if devise_mapping.rememberable? %>
  <div class="checkbox">
    <%= f.label :remember_me do %>
    <%= f.check_box :remember_me%>
    <%= t('.remember_me', :default => "Запомнить меня") %>
  <% end %>
</div>
<% end %>
  <div class="form-sign-help">
  <%# START add reCAPTCHA %>
    <%# flash[:recaptcha_error] %>
    <%# recaptcha_v3(action: 'login', site_key: Rails.application.credentials.recaptcha_site_key) %>
  <%# END add reCAPTCHA %>
  <%# START add reCAPTCHA %>
  <%= flash[:recaptcha_error] if !Rails.env.development? %>
  <%= recaptcha_tags if !Rails.env.development?%>
  <%# END add reCAPTCHA %>
  </div>
  <%= f.submit t('.sign_in', :default => "Войти"), class: "btn btn-primary" %>
<%end%>