<div class="row mt-3">
  <div class="col-12">
      <div class="h2">Наши сервисы</div>
      <table class="table">
        <thead>
          <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Состояние</th>
            <th>Настройка</th>
            <th>Тариф</th>
            <th>Действует</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr classs="favorite_setup">
            <td><%= FavoriteSetup::TITLE %></td>
            <td><%= FavoriteSetup::DESCRIPTION %></td>
            <td>
              <%= link_to 'Добавить', new_favorite_setup_path, class: 'btn btn-dark' if !@favorite_setup %>
              <%= link_to 'Добавлен', edit_favorite_setup_path(@favorite_setup.id), class: 'btn btn-outline-dark disabled', disabled: true if @favorite_setup %>
            </td>
            <td>
              <%= link_to 'Настроить', edit_favorite_setup_path(@favorite_setup.id), class: 'btn btn-dark' if @favorite_setup && !@favorite_setup.status %>
              <%= link_to 'Настроено', edit_favorite_setup_path(@favorite_setup.id), class: 'btn btn-outline-dark' if @favorite_setup && @favorite_setup.status %>
            </td>
            <td>
              <%= @favorite_setup.payplan.title if @favorite_setup && @favorite_setup.payplan %></br>
              <%= @favorite_setup.status ? "Состояние: Вкл" : "Состояние: Выкл" if @favorite_setup %>
            </td>
            <td><%= @favorite_setup.present? && @favorite_setup.valid_until.present? ? @favorite_setup.valid_until.strftime("%d/%m/%Y") : "бесплатно" %></td>
            <td><%# link_to '<span class="oi oi-trash"></span>'.html_safe, @favorite_setup, method: :delete, data: { confirm: 'Are you sure?' } if @favorite_setup %></td>
          </tr>

          <tr classs="message_setup">
            <td><%= MessageSetup::TITLE %></td>
            <td><%= MessageSetup::DESCRIPTION %></td>
            <td>
              <%= link_to 'Добавить', new_message_setup_path, class: 'btn btn-dark' if !@message_setup %>
              <%= link_to 'Добавлен', edit_message_setup_path(@message_setup.id), class: 'btn btn-outline-dark disabled', disabled: true if @message_setup %>
            </td>
            <td>
              <%= link_to 'Настроить', edit_message_setup_path(@message_setup.id), class: 'btn btn-dark' if @message_setup && !@message_setup.status %>
              <%= link_to 'Настроено', edit_message_setup_path(@message_setup.id), class: 'btn btn-outline-dark' if @message_setup && @message_setup.status %>
            </td>
            <td>
              <%= @message_setup.payplan.title if @message_setup && @message_setup.payplan %></br>
              <%= @message_setup.status ? "Состояние: Вкл" : "Состояние: Выкл" if @message_setup %>
            </td>
            <td><%= @message_setup.present? && @message_setup.valid_until.present? ? @message_setup.valid_until.strftime("%d/%m/%Y") : "бесплатно" %></td>
            <td><%# link_to '<span class="oi oi-trash"></span>'.html_safe, @message_setup, method: :delete, data: { confirm: 'Are you sure?' } if @message_setup %></td>
          </tr>
        </tbody>
      </table>
  </div>
</div>
