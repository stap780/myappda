<div class="row mt-3 mb-3">
  <div class="col-3">
    <h2>Users</h2>
      <small>Всего - <%= User.count %></small>
    <%# link_to '<span class="oi oi-trash"></span>'.html_safe, delete_selected_citilinks_path, class: 'btn btn-secondary btn-sm', id: 'deleteAll', remote: true, data: { delete_url: delete_selected_citilinks_path } %>
  </div>

  <%= search_form_for @search, {class: 'form-inline col-6 pl-0 pr-0'} do |f| %>
    <div class="input-group input-group-sm">
      <%= f.search_field :name_cont_all , placeholder: 'name', class: "form-control", style: "max-width: 180px;" %>
      <%= f.search_field :subdomain_cont_all , placeholder: 'subdomain(логин)', class: "form-control", style: "max-width: 180px;" %>
      <%= button_tag(type: 'submit', :class => "btn btn-info") do %>
        <span class="oi oi-magnifying-glass"></span>
      <% end %>
      <%= link_to '<span class="oi oi-reload"></span>'.html_safe, users_path, class: 'btn btn-outline-dark ' %>
    </div>
  <% end %>
</div>


<div class="table-responsive">
  <table class="table table-sm table-hover align-middle table-bordered border-light">
    <thead class="align-middle">
      <tr class="bg-success">
        <th rowspan="2">ID</th>
        <th rowspan="2">Пользователь</th>
        <th rowspan="2">Даты</th>
        <th rowspan="2">Настройки</th>
        <th colspan="3">Всего</th>
        <th colspan="3">Сервисы состояние</th>
        <th colspan="1" rowspan="2"></th>
      </tr>
      <tr class="bg-success mt-0">
        <th>Clients</th>
        <th>Products</th>
        <th>Favorites</th>
        <th>Избранное</th>
        <th colspan="2">Триггеры</th>
      </tr>
    </thead>
    <tbody class="align-middle">
      <% @users.each do |user| %>
        <tr id="id_<%= user.id %>">
          <%= render user %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="apple_pagination">
  <%= will_paginate @users %>
</div>
